<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorRegistroRepresentante</servlet-name>
        <servlet-class>com.ipn.mx.servlets.ControladorRegistroRepresentante</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorActualizarJugador</servlet-name>
        <servlet-class>com.ipn.mx.servlets.ControladorActualizarJugador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorRegistrarJugador</servlet-name>
        <servlet-class>com.ipn.mx.servlets.ControladorRegistrarJugador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorConsultarJugadores</servlet-name>
        <servlet-class>com.ipn.mx.servlets.ControladorConsultarJugadores</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorRegistroRepresentante</servlet-name>
        <url-pattern>/ControladorRegistroRepresentante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorActualizarJugador</servlet-name>
        <url-pattern>/ControladorActualizarJugador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorRegistrarJugador</servlet-name>
        <url-pattern>/ControladorRegistrarJugador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorConsultarJugadores</servlet-name>
        <url-pattern>/ControladorConsultarJugadores</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
